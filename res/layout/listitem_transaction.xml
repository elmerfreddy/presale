<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txtStoreName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="TextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtEditProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtStoreName"
        android:text="Productos:" />

    <TextView
        android:id="@+id/txtProductsCount"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtEditProductName"
        android:layout_alignBottom="@+id/txtEditProductName"
        android:layout_toLeftOf="@+id/txtUserName"
        android:layout_toRightOf="@+id/txtEditProductName"
        android:text="TextView"
        android:textColor="#969696" />

    <TextView
        android:id="@+id/txtUserName"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtProductsCount"
        android:layout_alignBottom="@+id/txtProductsCount"
        android:layout_alignParentRight="true"
        android:text="TextView" />

</RelativeLayout>
